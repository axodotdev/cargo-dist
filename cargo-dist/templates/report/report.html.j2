{# Report generated by dist plan --print=report --html #}
<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>dist Release Preview Report</title>
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial; padding: 16px; }
    h1 { font-size: 20px; }
    table { border-collapse: collapse; width: 100%; margin: 12px 0; }
    th, td { border: 1px solid #ddd; padding: 8px; }
    th { text-align: left; }
    .muted { color: #666; }
    code { background: #f5f5f5; padding: 2px 4px; }
  </style>
</head>
<body>
  <h1>Release Preview</h1>
  <p class="muted">This HTML is a convenience rendering of <code>release_report.json</code>.</p>

  <h2>Summary</h2>
  <ul>
    <li>Total apps: {{ summary.apps }}</li>
    <li>Total artifacts: {{ summary.artifacts }}</li>
    <li>Targets: {{ summary.targets|join(", ") }}</li>
  </ul>

  <h2>Artifacts</h2>
  <table>
    <thead><tr><th>Package</th><th>Version</th><th>Target</th><th>Kind</th><th>Filename</th><th>Checksum</th></tr></thead>
    <tbody>
      {% for a in artifacts %}
      <tr>
        <td>{{ a.package }}</td>
        <td>{{ a.version }}</td>
        <td>{{ a.target }}</td>
        <td>{{ a.kind }}</td>
        <td>{{ a.filename }}</td>
        <td>{{ a.checksum or "" }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</body>
</html>
